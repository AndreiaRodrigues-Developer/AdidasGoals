<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context="com.andreiarodrigues.adidasgoals.view.fragments.GoalsDetailFragment">

    <TextView
        android:id="@+id/tv_goal_detail_title"
        style="@style/GoalDetailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Title" />

    <TextView
        android:id="@+id/tv_goal_detail_description"
        style="@style/GoalDetailDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_goal_detail_title"
        android:layout_marginBottom="10dp"
        android:text="Description" />

    <TextView
        android:id="@+id/tv_goal_detail"
        style="@style/GoalDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_goal_detail_description"
        android:layout_marginBottom="10dp"
        android:text="1000" />

</RelativeLayout>
